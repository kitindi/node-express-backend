<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Document</title>
  </head>
  <body>
    <header>
      <h2><a href="/">Our StoryTelling App</a></h2>
      <nav>
        <% if(user) {%>
        <a href="/create-post">Create Post</a>
        <a href="/logout">Log Out</a>
        <% } else {%>
        <a href="login">Log In</a>
        <% } %>
      </nav>
    </header>

    <main>
      <h3><%= post.title %></h3>
      <article>
        <small
          >posted by <%= post.username %> on: <%= new Date(post.createdDate).getDate() %> / <%= new Date(post.createdDate).getMonth() + 1 %> / <%= new
          Date(post.createdDate).getFullYear() %></small
        >
        <div><%= post.body %></div>
      </article>
      <a href="/edit-post/<%= post.id %>" class="button">Edit Post</a>
      <form action="" style="display: inline" action="/delete/<%= post.id %>" method="POST">
        <button>Delete Post</button>
      </form>
    </main>
    <footer>
      <small>&copy; All Rights Reserved</small>
    </footer>
  </body>
</html>
